{{#if allProducts.length}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Titulo</th>
            <th scope="col">Precio</th>
            <th scope="col">Thumbnail</th>
        </tr>
    </thead>
    <tbody>

        {{#each allProducts}}
        <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img src={{this.thumbnail}} alt={{this.title}} height="60px" /></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h2>No hay productos.</h2>
{{/if}}