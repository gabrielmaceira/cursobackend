html
    head
        title="AGREGAR ITEMS"
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
            integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
    body
        main(class="container")
            div(class="row")
                h1(class="col")="AGREGAR ITEMS"
            form(action="/productos" method="POST" class="form-width")
                div(class="form-group")
                    label(for="title")="Titulo"
                    input(type="text" class="form-control" name="title" placeholder="Ingresar titulo" required)
                div(class="form-group")
                    label(for="price")="Precio"
                    input(type="number" class="form-control" name="price" placeholder="Ingresar precio" required)
                div(class="form-group")
                    label(for="thumbnail")="Thumbnail"
                    input(type="url" class="form-control" name="thumbnail" placeholder="Ingresar url thumbnail" required)
                button(type="submit" class="btn btn-primary")="Enviar" 
            div(id="results-table")
                if allProducts.length > 0
                    table(class="table")
                        thead
                            tr
                                th(scope="col")="Titulo"
                                th(scope="col")="Precio"
                                th(scope="col")="Thumbnail"
                        tbody
                            each item in allProducts
                                tr
                                    td=item.title
                                    td=item.price
                                    td
                                        img(src=item.thumbnail alt=item.title height="60px")
                else
                    h2="No hay productos."
