<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <main class="container">

        <div id="results-table">
            {{#if allProducts.length}}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Titulo</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Thumbnail</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each allProducts}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>${{this.price}}</td>
                        <td><img src={{this.thumbnail}} alt={{this.title}} height="60px" /></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <h2>No hay productos.</h2>
            {{/if}}

        </div>

        <a class="btn btn-primary mt-4" href="/">IR A FORM</a>
    </main>
</body>

</html>